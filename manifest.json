{
  "applications": {
    "gecko": {
      "id": "monitor@firefox.com",
      "strict_min_version": "60.0"
    }
  },
  "manifest_version": 2,
  "name": "Firefox Monitor",
  "version": "0.01",
  "description": "Add-on to show notifications upon visiting breached sites.",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "management"
  ],

  "experiment_apis": {
    "blurts": {
      "schema": "api/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api/api.js",
        "paths": [["blurts"]]
      }
    },
    "study": {
      "schema": "./privileged/study/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/study/api.js",
        "paths": [["study"]]
      }
    }
  }
}
